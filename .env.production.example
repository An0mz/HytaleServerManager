# Production Environment Configuration
# Copy this file to .env and update values for your Unraid deployment

# Server Configuration
PORT=3000
NODE_ENV=production

# Database
DATABASE_PATH=/app/data/hytale-manager.json

# Paths (all under /app/data for single volume mount)
SERVERS_PATH=/app/data/servers
BACKUPS_PATH=/app/data/backups
HYTALE_CACHE_PATH=/app/data/cache/hytale

# Security - IMPORTANT: Change this to a strong random string
# Generate one with: openssl rand -hex 32
JWT_SECRET=change-this-to-a-strong-random-string

# Hytale Configuration
DEFAULT_PORT=5520
DEFAULT_MAX_PLAYERS=100
DEFAULT_VIEW_RADIUS=32
